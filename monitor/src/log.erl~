-module(log).

-include("../../common/common.hrl").
-include_lib("eunit/include/eunit.hrl").
-include("../../api/gen-erl/api_types.hrl").

-spec file(Filter :: #filter{},
	   Frames :: [binary()]) -> ok.

-spec alert(Filter :: #filter{}, Data :: binary()) -> 
		   ok.

-spec log(SU :: #session_update{},
	  Filters :: [#filter{}],
	  Frames :: [binary()]) ->
		 ok.
-spec filename(FilterId :: integer(), Count :: integer()) ->
		      string().

-spec check_file_limit(FilterId :: integer(),
		       Limit :: integer(),
		       Path :: string()) ->
			      boolean().
